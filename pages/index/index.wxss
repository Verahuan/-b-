
page{
  color:#666
}
.nav{
white-space: nowrap;
padding: 5rpx 0;
}
.nav_item{
  display: inline-block;
  padding: 20rpx 45rpx;
  font-size: 30rpx;
}
.nav_item.active{
  border-bottom:5rpx solid hotpink;
}
.slides{
  margin-top: 10rpx;
}
.slides swiper{
  height: 220rpx;
}
.slides navigator{
  width:100%;
  height: 100%;
}
.slides image{
  width: 100%;
  height: 100%;
}
/*视频列表*/
.video{
  display: flex;
  flex-wrap: wrap;
  padding: 5rpx;
  justify-content: space-around;
}
.video navigator{
  width: 48%;
  margin-top: 10px;
}
.video_wrap{
  position: relative;
}
.video_wrap image{
  width: 100%;
  border-radius: 15rpx;
}
.video_wrap .playInfo{
  position: absolute;
  bottom: 10rpx;
  left:0;
  right:0;
  color: white;
  font-size: 24rpx;
}
.video_wrap .comment_number{
 float: right;
}
.video_wrap .play_number{
float: left;
 }
 .video_text{
   font-size: 28rpx;
   display: -webkit-box;

   overflow: hidden;
   white-space: normal;
   text-overflow: ellipsis;
   word-wrap: break-word;
   -webkit-line-clamp:2;
   -webkit-box-orient: vertical;
 }